@model _05_MvcWebUI.Models.ProductUpdateViewModel

@{ ViewBag.Title = "title";
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; }


<h2>Update Product</h2>

<form asp-controller="Admin" asp-action="Update" method="post">
    <div class="form-group">
        <label asp-for="Product.Name"></label>
        <input asp-for="Product.Name" class="form-control" placeholder="Product Name" />
        <span asp-validation-for="Product.Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Product.Price"></label>
        <input asp-for="Product.Price" class="form-control" placeholder="Price" />
        <span asp-validation-for="Product.Price"></span>
    </div>
    <div class="form-group">
        <label asp-for="Product.CategoryId"></label>
        <input asp-for="Product.CategoryId" class="form-control" />
        <span asp-validation-for="Product.CategoryId"></span>
    </div>
    <div class="form-group">
        <label asp-for="Product.RestaurantId"></label>
        <input asp-for="Product.RestaurantId" class="form-control" />
        <span asp-validation-for="Product.RestaurantId"></span>
    </div>
    <input type="hidden" asp-for="Product.Id" />
    <input type="submit" value="Update" class="btn btn-xs btn-success" />
</form>