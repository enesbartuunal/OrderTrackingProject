@model _05_MvcWebUI.Models.ShippingDetailsViewModel

@{ Layout = "";}

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
</head>
<body class="bg-light">

    <div class="container">
        <main>
            <div class="py-5 text-center">
                <h2>Checkout</h2>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-7 text-center col-lg-7">
                    <form asp-controller="Receipt" asp-action="Complete" method="post" class="needs-validation" novalidate="">
                        <div class="row g-3">
                            <div class="col-sm-6">
                                <label asp-for="ShippingDetails.FirstName" class="form-label"></label>
                                <input asp-for="ShippingDetails.FirstName" class="form-control" placeholder="First Name" type="text" />
                                <span asp-validation-for="ShippingDetails.FirstName"></span>
                            </div>

                            <div class="col-sm-6">
                                <label asp-for="ShippingDetails.LastName" class="form-label"></label>
                                <input asp-for="ShippingDetails.LastName" class="form-control" type="text" placeholder="Last Name" />
                                <span asp-validation-for="ShippingDetails.LastName"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="ShippingDetails.Email" class="form-label"></label>
                                <input asp-for="ShippingDetails.Email" class="form-control" placeholder="you@example.com" />
                                <span asp-validation-for="ShippingDetails.Email"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="ShippingDetails.PhoneNumber" class="form-label"></label>
                                <input asp-for="ShippingDetails.PhoneNumber" type="text" class="form-control" placeholder="1234 Main St" />
                                <span asp-validation-for="ShippingDetails.PhoneNumber"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="ShippingDetails.Address" class="form-label"></label>
                                <input asp-for="ShippingDetails.Address" type="text" class="form-control" placeholder="1234 Main St" />
                                <span asp-validation-for="ShippingDetails.Address"></span>
                            </div>
                        </div>

                        <hr class="my-4">

                        <h4 class="mb-3">Payment</h4>

                        <button class="w-100 btn btn-primary btn-lg" type="submit">Continue to checkout</button>
                    </form>
                </div>
            </div>
        </main>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

</body>
</html>


